
@{
    ViewBag.Title = "Registrar";
}

<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title - TuApp</title>
    <link rel="stylesheet" href="~/Content/bootstrap.css" />
    <link rel="stylesheet" href="~/Content/styles/Registrar.css" />
    <title></title>
</head>
<body>

    <header>
        <h2>Aplicación Nomina</h2>
    </header>

    <main>
        <div>
            <form action="@Url.Action("Registrar","Acceso")" method="post">
                <h1>Registrarse</h1>
                <hr class="divider" />
                <div class="form-row">
                    <div class="form-group">
                        <label>Nombre</label>
                        <input type="text" id="nombre" name="nombre" placeholder="Nombre" required />
                    </div>
                    <div class="form-group">
                        <label>Apellido</label>
                        <input type="text" id="apellido" name="apellido" placeholder="Apellido" required />
                    </div>
                    <div class="form-group">
                        <label>Fecha de nacimiento</label>
                        <input type="datetime" id="birth_date" name="birth_date" placeholder="dd-mm-yyyy" required />
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group">
                        <label>Correo</label>
                        <input type="text" id="correo" name="correo" placeholder="Correo" required />
                    </div>
                    <div class="form-group">
                        <label>Identificación</label>
                        <input type="text" id="cedula" name="cedula" placeholder="Identificación" />
                    </div>
                    <div class="form-group">
                        <label>Contraseña</label>
                        <input type="password" id="clave" name="clave" placeholder="Contraseña" required />
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group">
                        <p>Selecciona el género:</p>
                        <label><input type="radio" id="generoH" name="genero" value="H" required /> Hombre</label>
                        <label><input type="radio" id="generoM" name="genero" value="M" /> Mujer</label>
                    </div>
                </div>
                <div class="form-actions">
                    <input type="submit" value="Registrar" />
                    <a href="~/Acceso/Autenticacion" class="login-link">Ya tienes una cuenta?</a>
                </div>
            </form>
        </div>
    </main>
</body>
</html>


