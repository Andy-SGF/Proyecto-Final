@model AppNomina.Models.Dashboard
@{
    ViewBag.Title = "Dashboard";
}

<div class="container mt-4">
    <h2 class="mb-4">Dashboard</h2>

    <!-- Resumen -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card text-center p-3 shadow-sm">
                <h5 class="text-muted">Empleados Activos</h5>
                <h2 class="text-primary">@Model.TotalEmpleados</h2>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center p-3 shadow-sm">
                <h5 class="text-muted">Departamentos</h5>
                <h2 class="text-success">@Model.TotalDepartamentos</h2>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center p-3 shadow-sm">
                <h5 class="text-muted">Salarios Vigentes</h5>
                <h2 class="text-info">@Model.SalariosVigentes</h2>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center p-3 shadow-sm">
                <h5 class="text-muted">Alertas</h5>
                <h2 class="text-danger">@Model.SalariosAlerta</h2>
            </div>
        </div>
    </div>

    <!-- Accesos rápidos -->
    <h4 class="mb-3">Accesos rápidos a módulos</h4>
    <div class="row">
        <div class="col-md-4 mb-2">
            <a href="/Empleado/Index" class="btn btn-primary w-100 p-3 shadow-sm">
                <i class="bi bi-people-fill"></i> Empleados
            </a>
        </div>
        <div class="col-md-4 mb-2">
            <a href="/Departamentos" class="btn btn-secondary w-100 p-3 shadow-sm">
                <i class="bi bi-building"></i> Departamentos
            </a>
        </div>
        <div class="col-md-4 mb-2">
            <a href="/Salarios" class="btn btn-success w-100 p-3 shadow-sm">
                <i class="bi bi-cash-coin"></i> Salarios
            </a>
        </div>
    </div>
</div>