@model AppNomina.Models.Dashboard
@{
    ViewBag.Title = "Dashboard";
    
}

<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title - TuApp</title>
    <link rel="stylesheet" href="~/Content/bootstrap.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">
    <link rel="stylesheet" href="~/Content/styles/HomeIndex.css" />
    <title></title>
</head>
<body>
    
    <header>
        <h2>Aplicación Nomina</h2>
    </header>

    <main class="dashboard-container">
        <!-- Resumen -->
        <div class="dashboard-resumen">
            <div class="dashboard-card">
                <h5>Empleados Activos</h5>
                <h2>@Model.TotalEmpleados</h2>
            </div>
            <div class="dashboard-card">
                <h5>Departamentos</h5>
                <h2>@Model.TotalDepartamentos</h2>
            </div>
            <div class="dashboard-card">
                <h5>Salarios Vigentes</h5>
                <h2>@Model.SalariosVigentes</h2>
            </div>
            <div class="dashboard-card">
                <h5>Alertas</h5>
                <h2>@Model.SalariosAlerta</h2>
            </div>
        </div>

        <!-- Accesos rápidos -->
        <h4>Módulos</h4>
        <div class="dashboard-modulos">
            <a href="/Empleado/Index" class="btn btn-primary">
                <i class="bi bi-people-fill"></i> Empleados
            </a>
            <a href="/Departamentos" class="btn btn-primary">
                <i class="bi bi-building"></i> Departamentos
            </a>
            <a href="/Empleado/Index" class="btn btn-primary">
                <i class="bi bi-people-fill"></i> Cargos
            </a>
            <a href="/Empleado/Index" class="btn btn-primary">
                <i class="bi bi-people-fill"></i> Gerentes de departamentos
            </a>
            <a href="/Salarios" class="btn btn-success">
                <i class="bi bi-cash-coin"></i> Salarios
            </a>
            <a href="/Empleado/Index" class="btn btn-secondary">
                <i class="bi bi-people-fill"></i> Reportes
            </a>
        </div>
    </main>
        
</body>
</html>

